{
  "version": 2,
  "builds": [
    {
      "src": "cliente/package.json",
      "use": "@vercel/node",
      "config": { "port": 8000, "start": "npm start" }
    },
    {
      "src": "servidor/package.json",
      "use": "@vercel/node",
      "config": { "port": 3000, "start": "node src/app.js" }
    }
  ],
  "routes": [
    { "src": "/cliente/(.*)", "dest": "cliente/$1" },
    { "src": "/servidor/(.*)", "dest": "servidor/$1" },
    { "src": "/(.*)", "dest": "servidor/$1" }
  ]
}