{
  "version": 2,
  "builds": [
    {
      "src": "cliente/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "cliente/build",
        "base": "/cliente"
      }
    },
    {
      "src": "servidor/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/cliente/.*",
      "dest": "/cliente/src/index.js",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      },
      "continue": true
    },
    {
      "src": "/cliente/(.*)",
      "dest": "/cliente/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/servidor/src/app.js"
    }
  ]
}