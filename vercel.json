{
    "version": 2,
    "builds": [
      { "src": "cliente/package.json", "use": "@vercel/static-build" },
      { "src": "servidor/package.json", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "servidor/$1" },
      { "src": "/(.*)", "dest": "cliente/$1" }
    ]
  }