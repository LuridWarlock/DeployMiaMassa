{
  "version": 2,
  "builds": [
    { "src": "cliente/package.json", "use": "@vercel/node" },
    { "src": "servidor/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/cliente/(.*)", "dest": "cliente/src/$1" },
    { "src": "/servidor/(.*)", "dest": "servidor/src/routes/$1" },
    { "src": "/(.*)", "dest": "servidor/$1" }
  ]
}